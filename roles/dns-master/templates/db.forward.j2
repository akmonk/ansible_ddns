$ORIGIN .
$TTL 604800	; 1 week
{{ domain }}	IN SOA	ns1.{{ domain }}. {{ ansible_fqdn }}. (
				8          ; serial
				604800     ; refresh (1 week)
				86400      ; retry (1 day)
				2419200    ; expire (4 weeks)
				604800     ; minimum (1 week)
				)
			NS	ns1.{{ domain }}.
$ORIGIN {{ domain }}.
$TTL 300	; 5 minutes
$TTL 604800	; 1 week
ns1	 A 192.168.15.3
ansible  A 192.168.15.2
dns-master      A 192.168.15.3
